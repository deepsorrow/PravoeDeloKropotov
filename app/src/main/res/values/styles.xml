<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="KeyButtonStyle">
        <item name="android:layout_width">@dimen/key_size</item>
        <item name="android:layout_height">@dimen/key_size</item>
        <item name="android:layout_margin">@dimen/keypad_button_margin</item>
        <item name="android:textSize">@dimen/keyTextSize</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="NextButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/circle_button_background</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:src">@drawable/arrow_forward_next</item>
    </style>
</resources>